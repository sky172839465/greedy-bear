{
	"extends": [
		"airbnb",
		"airbnb/hooks"
	],
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"no-console": "off",
		"semi": [2, "never"],
		"jsx-quotes": ["error", "prefer-single"],
		"react/prop-types": "off",
		"react/jsx-props-no-spreading": "off",
		"operator-linebreak": ["error", "after"]
	},
	"env": {
		"browser": true,
    "node": true,
    "jasmine": true,
		"webextensions": true
	}
}